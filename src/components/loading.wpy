<style>
.loading{
    font-size: 14px;
    height: 20px;
    padding: 50rpx 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .loading-pic{
    width: 20px;
    height: 20px;
    padding-right: 10px;
  }
  .text{
    color: #999999;
    display: block;
  }
</style>
<template>
  <view class="loading">
    <view class="loading-pic" style="background:url('{{loading.pic}}') no-repeat center center; background-size: 20px 20px;"></view>
    <span class="text">{{loading.text}}</span>
  </view>
</template>
<script>
  import wepy from 'wepy';
  export default class loading extends wepy.component {
    props = {
      loadingType: {
        type: Number
      }
    }
    data = {
      loading: {
        pic: '',
        text: ''
      }
    };
    watch = {
      loadingType () {
        let me = this;
        me.$apply();
        me.checkType();
      }
    };
    checkType() {
      let me = this;
      if (me.loadingType === 0) {
        me.loading = {
          pic: '',
          text: ''
        };
      } else if (me.loadingType === 1) {
        me.loading = {
          pic: 'data:image/gif;base64,',
          text: '正在加载'
        };
      } else if (me.loadingType === 2) {
        me.loading = {
          pic: 'data:image/png;base64,',
          text: '没有数据'
        };
      } else if (me.loadingType === 3) {
        me.loading = {
          pic: 'data:image/png;base64,',
            text: '没有更多'
        };
      }
    };
    onLoad() {
      this.checkType();
    };
  }
</script>
